  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "homepage": "https://github.com/ioBroker/ioBroker.n8n",
  "license": "Apache-2.0",
  "keywords": [
    "ioBroker",
    "n8n",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.n8n"
  },
  "engines": {
    "node": ">=20.19"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "@iobroker/socket-classes": "^2.2.19",
    "@iobroker/webcomponent-selectid-dialog": "^1.0.10",
    "@iobroker/webserver": "^1.3.1",
    "@iobroker/ws": "^3.0.3",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "iobroker.ws": "^3.0.19",
    "n8n": "^1.98.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@iobroker/build-tools": "^2.0.15",
    "@iobroker/eslint-config": "^2.0.2",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.11",
    "@types/proxyquire": "^1.3.31",
    "chai": "^4.5.0",
    "mocha": "^11.1.0",
    "typescript": "~5.8.3"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.n8n/issues"
  },
  "main": "dist/main.js",
  "files": [
    "admin/",
    "dist/",
    "public/",
    "LICENSE",
    "n8n-nodes-iobroker/nodes/",
    "n8n-nodes-iobroker/dist/",
    "io-package.json"
  ],
  "scripts": {
    "check": "tsc --noEmit -p tsconfig.check.json",
    "build": "tsc -p tsconfig.build.json && cd n8n-nodes-iobroker && npm run build",
    "lint": "eslint -c eslint.config.mjs",
    "test": "",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "update-packages": "npx -y npm-check-updates --upgrade && cd n8n-nodes-iobroker && npx -y npm-check-updates --upgrade && cd ../src-iobroker && npx -y npm-check-updates --upgrade",
    "npm": "npm i && cd n8n-nodes-iobroker && npm i"
  },
  "readmeFilename": "README.md"
}
